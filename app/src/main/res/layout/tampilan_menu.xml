<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_weight="1"
            android:id="@+id/imagehospital"
            android:onClick="clickRS"
            android:layout_width="match_parent"
            android:layout_height="226dp"
            app:srcCompat="@drawable/logo_hospital" />

        <ImageView
            android:id="@+id/imagepolice"
            android:layout_width="match_parent"
            android:layout_height="222dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo_police" />
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_weight="1"
            android:id="@+id/imagesupermarket"
            android:layout_width="match_parent"
            android:layout_height="226dp"
            app:srcCompat="@drawable/logo_supermarket" />

        <ImageView
            android:id="@+id/imageschool"
            android:layout_width="match_parent"
            android:layout_height="222dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo_school" />
    </TableRow>





</LinearLayout>